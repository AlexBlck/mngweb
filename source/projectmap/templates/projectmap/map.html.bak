{% extends "projectmap/base.html" %}
{% load static %}

{% block extra_css %}
<style>
      html, body {
        height: 100%;
        margin: 0;
        padding: 0;
      }
      #map {
        height: 500px;
        margin-top: -30px;
        margin-bottom: -30px;
      }
    </style>
{% endblock %}

{% block extra_js %}
<script>
      function initMap() {
        var locations = [
          {"address": "Birmingham", "region": "GB"},
          {"address": "Coventry", "region": "GB"},
          {"address": "Ohio", "region": "US"}
        ];
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 2,
          center: {lat: 30, lng: 1.9305},
        });
        var geocoder = new google.maps.Geocoder();

        geocodeLocations(geocoder, map, locations);
      }

      function geocodeLocations(geocoder, resultsMap, locations) {
        var l;
        for (var i = 0; i < locations.length; i++) {
          l = locations[i];
          geocoder.geocode({'address': l.address, 'region': l.region}, function(results, status) {
            if (status === google.maps.GeocoderStatus.OK) {
              var marker = new google.maps.Marker({
                map: resultsMap,
                position: results[0].geometry.location
              });
            }
          });
        }
      }
    </script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBd8Zjylhf7IP2WdSDV15DLeRUQCvpFjJM&callback=initMap">
    </script>
{% endblock %}

{% block title %}Project Map{% endblock %}

{% block full_jumbo %}
  <div class="jumbotron bg-grey">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1>Project Map</h1>
          <h2>We offer sequencing to customers around the globe</h2>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block content %}
  <div id="map"></div>
{% endblock %}